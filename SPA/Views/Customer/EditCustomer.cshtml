
@{
    ViewBag.Title = "EditCustomer";
}

<h2>Customer Data - {{Customer.CustomerCode}}</h2><br/>

<div class="row">
    <div class="col-sm-8 col-md-8 col-lg-8">
        <div class="col-sm-5 cold-md-5 col-lg-5">
            <div class="form-group">
                <label>First Name</label>
                <label class="form-control">{{Customer.FirstName}}</label>
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <label class="form-control">{{Customer.LastName}}</label>
            </div>
            <div class="form-group">
                <label>Birthdate</label>
                <label class="form-control">{{Customer.BirthDate | date: 'MMMM dd, yyy'}}</label>
            </div>
            <div class="form-group">
                <label>Email</label>
                <label class="form-control">{{Customer.Email}}</label>
            </div>
        </div>
        <div class="col-sm-4 cold-md-4 col-lg-4">
            <div class="form-group">
                <label>Phone Number</label>
                <label class="form-control">{{Customer.PhoneNumber}}</label>
            </div>
            <div class="form-group">
                <label>Address</label>
                <textarea class="form-control" rows="6" disabled>{{Customer.Address}}</textarea>
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-default" ng-click="close()">Close</button>
            </div>
        </div>
    </div>
</div>

