
@{
    ViewBag.Title = "Customers";
}

<div class="col-sm-12 col-md-12 col-lg-12">
    <h2>Customers</h2>
    <div class="input-group col-md-4">
        <input class="form-control py-2" type="search" placeholder="Search keyword">
        <span class="input-group-append">
            <button class="btn btn-outline-secondary" type="button">
                <i class="fa fa-search"></i>
            </button>
        </span>
    </div>
    <br />
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Customer Code</th>
                <th scope="col">Name</th>
                <th scope="col">Birthdate</th>
                <th scope="col">Email</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="cust in Customers">
                <td>{{cust.CustomerCode}}</td>
                <td>{{cust.FirstName}} {{cust.LastName}}</td>
                <td>{{cust.BirthDate | date: 'MMMM dd, yyyy'}}</td>
                <td><a ng-click="view(cust.Id)">{{cust.Email}}</a></td>
            </tr>
        </tbody>
    </table>
    <div ng-if="Customers.length == 0">No records found.</div><br/>
</div>

