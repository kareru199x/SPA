
@{
    ViewBag.Title = "AddCustomer";
}

<h2>Add Customer</h2>

<div class="row">
    <div class="col-sm-8 col-md-8 col-lg-8">
        <form name="formAdd" novalidate>
            <div class="col-sm-6 cold-md-6 col-lg-6">
                <div class="form-group" ng-class="{'has-error': formAdd.firstName.$invalid && formAdd.firstName.$dirty}">
                    <label for="firstName">First Name</label>
                    <input type="text" class="form-control" name="firstName" placeholder="Enter First Name" maxlength="50" ng-model="FirstName" ng-required="true">
                    <p ng-if="formAdd.firstName.$invalid && formAdd.firstName.$dirty" class="help-block">First Name is required.</p>
                </div>
                <div class="form-group" ng-class="{'has-error': formAdd.lastName.$invalid && formAdd.lastName.$dirty}">
                    <label for="lastName">Last Name</label>
                    <input type="text" class="form-control" name="lastName" placeholder="Enter Last Name" maxlength="50" ng-model="LastName" required>
                    <p ng-if="formAdd.lastName.$invalid && formAdd.lastName.$dirty" class="help-block">Last Name is required.</p>
                </div>
                <div class="form-group" ng-class="{'has-error': formAdd.birthdate.$invalid && formAdd.birthdate.$dirty}">
                    <label for="birthdate">Birthdate</label>
                    <input type="date" class="form-control" name="birthdate" placeholder="Enter Birthdate" ng-model="BirthDate" required>
                    <p ng-if="formAdd.birthdate.$invalid && formAdd.birthdate.$dirty" class="help-block">Birthdate is required.</p>
                </div>
                <div class="form-group" ng-class="{ 'has-error' : formAdd.email.$invalid && formAdd.email.$dirty}">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" aria-describedby="emailHelp" maxlength="50" placeholder="Enter email" ng-model="Email" ng-required="true">
                    <p ng-if="formAdd.email.$error.required && formAdd.email.$dirty" class="help-block">Email is required.</p>
                    <p ng-if="formAdd.email.$error.email && formAdd.email.$dirty" class="help-block">Invalid email address.</p>
                </div>
            </div>
            <div class="col-sm-6 cold-md-6 col-lg-6">
                <div class="form-group" ng-class="{'has-error': formAdd.phoneNumber.$invalid && formAdd.phoneNumber.$dirty}">
                    <label for="phoneNumber">Phone Number</label>
                    <input type="number" class="form-control" name="phoneNumber" placeholder="Enter Phone Number" maxlength="12" ng-model="PhoneNumber" required>
                    <p ng-if="formAdd.phoneNumber.$invalid && formAdd.phoneNumber.$dirty" class="help-block">Phone Number is required.</p>
                </div>
                <div class="form-group" ng-class="{'has-error': formAdd.address.$invalid && formAdd.address.$dirty}">
                    <label for="address">Address</label>
                    <textarea class="form-control" name="address" rows="6" maxlength="250" ng-model="Address" required></textarea>
                    <p ng-if="formAdd.address.$invalid && formAdd.address.$dirty" class="help-block">Phone Number is required.</p>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" ng-click="save()" ng-disabled="formAdd.$invalid">Submit</button>
                    <button type="button" class="btn btn-default" ng-click="cancel()">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>
